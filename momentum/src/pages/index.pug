doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Momentum

  body.page
    //- *** AUDIO PLAYER ***
    section.audio-player
      h2.visually-hidden
        | Audio-player
      div.audio-player__controls
        button.audio-player__button.audio-player__button--prev
          span.visually-hidden
            | Prev
        button.audio-player__button.audio-player__button--play
          span.visually-hidden
            | Play/pause
        button.audio-player__button.audio-player__button--next
          span.visually-hidden
            | Next
      ul.audio-player__playlist
        li
          | Aqua Caelestis
        li
          | Aqua Caelestis
        li
          | Aqua Caelestis
        li
          | Aqua Caelestis

    //- *** DATE ***
    section.date
      h2.visually-hidden
        | Date
      p.date__time
        | 20 : 00 : 00
      p.date__date
        | Monday, October 18
      p.date__greeting
        | Good day
        input.date__input(type="text" placeholder="[Enter your name]")
